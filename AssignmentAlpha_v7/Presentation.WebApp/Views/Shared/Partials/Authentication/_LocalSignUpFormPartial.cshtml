@model SignUpViewModel

<form id="signup-partial" asp-controller="Auth" asp-action="SignUp" method="post" novalidate>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <div class="field-group">
            <input asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <div class="field-group">
            <input asp-for="LastName"/>
            <span asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <div class="field-group">
            <input asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <div class="field-group">
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <div class="field-group">
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TermsAndConditions"></label>
        <div class="field-group">
            <div class="fight-me">
                <input asp-for="TermsAndConditions" type="checkbox" id="terms" class="form-check-input" />
                <label for="terms" class="form-check-label">
                    I accept the <a href="/terms" target="_blank">terms and conditions</a>.
                </label>
                <div class="move-for-me">
                    <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-blue btn-submit">Create Account</button>

</form>

@{await Html.RenderPartialAsync("_ValidationScripts");}
