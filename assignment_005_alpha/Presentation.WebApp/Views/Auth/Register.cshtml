@model RegisterViewModel
@{
    // Layout = "_CleanLayout";
    ViewData["Title"] = "Register";
}

<div class="center-screen">
    <div id="register" class="surface">

        <form id="signup-form" asp-action="Register" asp-controller="Auth" method="post" novalidate>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName"/>
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName"/>
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password"/>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="field-group">
                    <input asp-for="ConfirmPassword"/>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TermsAndConditions"></label>
                <div class="field-group">
                    <input asp-for="TermsAndConditions"/>
                    <span asp-validation-for="TermsAndConditions"></span>
                    @* <span asp-validation-for="TermsAndConditionsAccepted">I accept the terms and conditions.</span> *@
                </div>
            </div>

            <button type="submit" class="btn btn-blue btn-submit">Create Account</button>

        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScripts")